{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.invalid/schemas/conformance/conformance-declaration.schema.json",
  "title": "Schema Implementer Conformance Declaration",
  "description": "Machine-readable declaration of implementer conformance to one or more schema families and specific schema identifiers in this repository.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "declaration",
    "implementer",
    "scope"
  ],
  "properties": {
    "declaration": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "repository",
        "release",
        "declared_at"
      ],
      "properties": {
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Canonical repository URL."
        },
        "release": {
          "type": "string",
          "description": "Pinned release tag or version (e.g., v0.3.0)."
        },
        "declared_at": {
          "type": "string",
          "format": "date",
          "description": "Declaration date in UTC (YYYY-MM-DD)."
        },
        "statement": {
          "type": "string",
          "description": "Optional human-readable statement summarizing the claim."
        }
      }
    },
    "implementer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "contact"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Organization or project name."
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Implementer website or repository URL."
        },
        "contact": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "email"
          ],
          "properties": {
            "person": {
              "type": "string",
              "description": "Optional contact person or role."
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            }
          }
        }
      }
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "schema_families",
        "schemas"
      ],
      "properties": {
        "schema_families": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "dtg",
              "agent",
              "reputation"
            ]
          },
          "minItems": 1,
          "uniqueItems": true,
          "description": "Schema families covered by this declaration."
        },
        "schemas": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "path"
            ],
            "properties": {
              "id": {
                "type": "string",
                "format": "uri",
                "description": "Schema $id (preferred) or canonical URI reference."
              },
              "path": {
                "type": "string",
                "pattern": "^credentials\\/(dtg|agent|reputation)\\/v\\d+\\/.+\\.json$",
                "description": "Repository-relative path to schema file."
              },
              "notes": {
                "type": "string"
              }
            }
          }
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "issuer",
              "holder",
              "verifier",
              "registry"
            ]
          },
          "uniqueItems": true,
          "description": "Implementation roles covered."
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tooling": {
          "type": "string",
          "description": "Validation tooling used."
        },
        "ci_runs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "uniqueItems": true
        },
        "fixtures": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "uniqueItems": true
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "integrity": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hashes": {
          "type": "array",
          "description": "Optional hashes of artifacts used as evidence.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "algorithm",
              "value"
            ],
            "properties": {
              "algorithm": {
                "type": "string",
                "enum": [
                  "sha256",
                  "sha512"
                ]
              },
              "value": {
                "type": "string",
                "pattern": "^[A-Fa-f0-9]{64,128}$"
              }
            }
          }
        },
        "signed": {
          "type": "boolean",
          "description": "Whether this declaration was cryptographically signed."
        },
        "signature": {
          "type": "string",
          "description": "Optional detached signature or JWS."
        }
      }
    }
  }
}