{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/sankarshanmukhopadhyay/schemas/v0.3.0/controls/mappings/control-assurance-matrix.schema.json",
  "title": "Control to Assurance Level Matrix",
  "description": "Defines which control IDs are required or recommended for each assurance level.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "matrix_version",
    "generated_at",
    "levels"
  ],
  "properties": {
    "matrix_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}T.*Z$"
    },
    "levels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "assurance_level",
          "required_controls"
        ],
        "properties": {
          "assurance_level": {
            "type": "string",
            "pattern": "^AL[1-4]$"
          },
          "required_controls": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^SC-[A-Z]+-[0-9]{2}$"
            }
          },
          "recommended_controls": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^SC-[A-Z]+-[0-9]{2}$"
            }
          }
        }
      }
    }
  }
}
