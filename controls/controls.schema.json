{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://<org>.github.io/schemas/controls/controls.schema.json",
  "title": "Controls Registry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "registry_version",
    "generated_at",
    "controls"
  ],
  "properties": {
    "registry_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date"
    },
    "controls": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "domain",
          "type",
          "description",
          "schema_paths"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^SC-[A-Z]+-[0-9]{2}$"
          },
          "title": {
            "type": "string",
            "minLength": 3
          },
          "domain": {
            "type": "string",
            "minLength": 2
          },
          "type": {
            "type": "string",
            "enum": [
              "schema",
              "governance",
              "quality",
              "assurance",
              "process"
            ]
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "schema_paths": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}