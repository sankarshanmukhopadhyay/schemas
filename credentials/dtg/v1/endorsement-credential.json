{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$credentialContext": [
    "https://www.w3.org/ns/credentials/v2",
    "https://firstperson.network/credentials/dtg/v1",
    "https://w3id.org/security/suites/ed25519-2020/v1"
  ],
  "$credentialType": [
    "VerifiableCredential",
    "DTGCredential",
    "EndorsementCredential"
  ],
  "title": "VEC (Endorsement Credential)",
  "type": "object",
  "properties": {
    "endorsedSubject": {
      "type": "string",
      "description": "DID of the party being endorsed.",
      "pattern": "^did:[a-z0-9]+:[A-Za-z0-9.\\-_:%]+$"
    },
    "endorsementType": {
      "type": "string",
      "description": "Type/category of endorsement (controlled vocabulary recommended)."
    },
    "endorsementName": {
      "type": "string",
      "description": "Human-readable label for the endorsement (e.g., skill name)."
    },
    "competencyLevel": {
      "type": "string",
      "description": "Competency level (controlled vocabulary recommended).",
      "enum": [
        "beginner",
        "intermediate",
        "advanced",
        "expert"
      ]
    },
    "evidence": {
      "type": "array",
      "description": "Optional evidence references supporting the endorsement (URIs or DIDs).",
      "items": {
        "type": "string"
      }
    }
  },
  "description": "Attaches endorsements (skills, reputation) to a party.",
  "required": [
    "endorsedSubject",
    "endorsementType",
    "competencyLevel"
  ]
}
