{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/sankarshanmukhopadhyay/schemas/v0.2.0/credentials/dtg/v1/persona-credential.json",
  "$credentialContext": [
    "https://www.w3.org/ns/credentials/v2",
    "https://firstperson.network/credentials/dtg/v1",
    "https://w3id.org/security/suites/ed25519-2020/v1"
  ],
  "$credentialType": [
    "VerifiableCredential",
    "DTGCredential",
    "PersonaCredential"
  ],
  "type": "object",
  "properties": {
    "persona": {
      "type": "string",
      "description": "Persona DID (P-DID) being linked.",
      "pattern": "^did:[a-z0-9]+:[A-Za-z0-9.\\-_:%]+$"
    },
    "boundTo": {
      "type": "object",
      "description": "Reference to an existing relationship/edge that this persona is bound to."
    },
    "bindingMethod": {
      "type": "string",
      "description": "How the persona binding was established.",
      "enum": [
        "sameController",
        "delegation",
        "witnessed",
        "policyDerived"
      ]
    },
    "effectiveFrom": {
      "type": "string",
      "description": "RFC3339 timestamp when this binding becomes effective.",
      "format": "date-time"
    },
    "effectiveUntil": {
      "type": "string",
      "description": "RFC3339 timestamp when this binding expires (optional).",
      "format": "date-time"
    }
  },
  "title": "VPC (Persona Credential)",
  "description": "Links a persona DID (P-DID) to an existing relationship.",
  "required": [
    "persona",
    "boundTo",
    "bindingMethod",
    "effectiveFrom"
  ]
}
