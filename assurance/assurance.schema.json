{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/sankarshanmukhopadhyay/schemas/v0.3.0/assurance/assurance.schema.json",
  "title": "Assurance Levels Registry",
  "description": "Machine-readable registry of assurance levels (AL1-AL4) used by conformance declarations and control mappings.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "registry_version",
    "generated_at",
    "assurance_levels"
  ],
  "properties": {
    "registry_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}T.*Z$"
    },
    "assurance_levels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "summary",
          "requirements"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^AL[1-4]$"
          },
          "title": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "requirements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
