{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/sankarshanmukhopadhyay/schemas/v0.3.0/registry/registry.schema.json",
  "title": "Schema Implementer Registry (Simulation)",
  "description": "A non-normative example of how an ecosystem might index implementers and their conformance declarations.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "registry_version",
    "generated_at",
    "entries"
  ],
  "properties": {
    "registry_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}T.*Z$"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "implementer_id",
          "display_name",
          "declaration",
          "assurance_level",
          "controls"
        ],
        "properties": {
          "implementer_id": {
            "type": "string"
          },
          "display_name": {
            "type": "string"
          },
          "declaration": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "url",
              "sha256"
            ],
            "properties": {
              "url": {
                "type": "string"
              },
              "sha256": {
                "type": "string",
                "pattern": "^[a-fA-F0-9]{64}$"
              }
            }
          },
          "assurance_level": {
            "type": "string",
            "pattern": "^AL[1-4]$"
          },
          "controls": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^SC-[A-Z]+-[0-9]{2}$"
            }
          },
          "scope": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  }
}
